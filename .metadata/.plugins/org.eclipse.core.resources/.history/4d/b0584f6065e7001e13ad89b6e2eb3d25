package com.challenge;

public class checkArrayIsSorted {
	
	
	public static boolean incArr(int[] arr) {
		int i =0;
		while(i < arr.length) {
			if(arr[i] < arr[i-1]) {
				return false;
			}
			i++;
		}
		return true;
	}
	
	public static int decArr(int[] arr) {
		int i =0;
		while(i < arr.length) {
			if(arr[i] > arr[i-1]) {
				return false;
			}
			i++;
		}
		return true;
	}
	
	

}
